# LiveKit Connection Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# Agent Configuration
AGENT_NAME=local-voice-agent
LOG_LEVEL=INFO

# STT Configuration (Whisper MLX)
STT_MODEL=mlx-community/whisper-large-v3-turbo
STT_LANGUAGE=en
STT_DEVICE=mps

# LLM Configuration (MLX)
LLM_MODEL=mlx-community/Meta-Llama-3.1-8B-Instruct-4bit
LLM_DEVICE=mps
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7

# TTS Configuration (NeuTTS Air)
TTS_BACKBONE=neuphonic/neutts-air-q4-gguf
TTS_CODEC=neuphonic/neucodec-onnx-decoder
TTS_DEVICE=mps
TTS_SAMPLE_RATE=24000

# Voice Cloning Configuration
VOICE_CLONE_AUDIO=./voice_clones/reference.wav
VOICE_CLONE_TEXT=./voice_clones/reference.txt
VOICE_CLONE_CODES=./voice_clones/reference.pt

# VAD Configuration
VAD_MODEL=silero_vad

# Pipeline Settings
ALLOW_INTERRUPTIONS=true
INTERRUPT_SPEECH_DURATION=0.5
MIN_ENDPOINTING_DELAY=0.5
MAX_ENDPOINTING_DELAY=6.0

# System Prompt
SYSTEM_PROMPT="You are a helpful voice assistant running completely locally on Mac. Keep your responses concise and natural for voice conversation. Speak clearly and conversationally."
